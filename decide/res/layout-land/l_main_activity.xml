<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:layout_centerVertical="false"
    android:layout_gravity="top|center_vertical|center_horizontal"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/ba1_comunidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bt_selector"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/i_comu"
            android:onClick="ListaComunidades"
            android:padding="0dp"
            android:text="@string/bt_titulo_comunidad" />

        <Button
            android:id="@+id/ba1_buenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bt_selector"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/i_comu"
            android:onClick="Cuenta"
            android:padding="0dp"
            android:text="@string/bt_titulo_cuenta" />

        <Button
            android:id="@+id/ba1_preguntas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/ba1_comunidades"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/bt_selector"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/i_comu"
            android:onClick="Preguntas"
            android:padding="0dp"
            android:text="@string/bt_titulo_preguntas" />

        <Button
            android:id="@+id/ba1_informacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ba1_buenta"
            android:layout_marginRight="40dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/bt_selector"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/i_comu"
            android:onClick="Info"
            android:padding="0dp"
            android:text="@string/bt_titulo_info" />

    </RelativeLayout>
    
    

