<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <!-- pressed -->
  <item android:state_pressed="true">
    <shape>
      <stroke android:width="1dp" android:color="@color/boton_border" />      
      <gradient android:startColor="@color/star_color_def" 
          		android:endColor="@color/end_color_def" 
          		android:angle="270" /> 
     </shape>
  </item>
  <!-- focused -->
  <item android:state_focused="true">
    <shape>
      <stroke android:width="1dp" android:color="@color/boton_border" />          
      <gradient android:startColor="@color/star_color" 
          		android:endColor="@color/end_color" 
          		android:angle="270" />
    </shape>
  </item>
  <!-- default -->
  <item>      
    <shape>
      <solid android:color="@color/end_color" />
      <stroke android:width="0dp" android:color="@color/boton_border" />      
    </shape>
    <color android:color="@color/star_color" />    
  </item>
</selector>






